{
  "name": "nuxt-app",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "build:netlify": "npm run test:run && npm run build:production",
    "build:production": "nuxt build",
    "build:preview": "npm run test:mock && nuxt build",
    "build:staging": "npm run test:run && nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:contract": "vitest run tests/api/",
    "test:mock": "vitest run tests/api/mock-simple.test.js --config=vitest.config.simple.js",
    "test:mock-advanced": "vitest run tests/api/mock-api.test.ts tests/components/dashboard-mock.test.ts",
    "test:components": "vitest run tests/components/",
    "test:integration": "RUN_INTEGRATION_TESTS=true vitest run tests/integration/",
    "test:watch": "vitest --watch",
    "contract:generate": "node scripts/generate-contract.js",
    "validate:deployment": "node scripts/validate-deployment.js"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/icon": "^2.0.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "app-store-scraper": "^0.18.0",
    "chart.js": "^4.5.0",
    "eslint-config-prettier": "^10.1.8",
    "google-play-scraper": "^10.0.1",
    "nuxt": "^3.13.0",
    "prettier": "^3.6.2",
    "sentiment": "^5.0.2",
    "vue": "^3.5.21",
    "vue-chartjs": "^5.3.2",
    "vue-router": "^4.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@vitest/ui": "^2.1.5",
    "@vitest/coverage-v8": "^2.1.5",
    "vitest": "^2.1.5",
    "@types/node": "^22.10.2",
    "msw": "^2.6.0",
    "@testing-library/vue": "^8.1.0",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^25.0.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "ajv": "^8.17.1",
    "netlify-plugin-lighthouse": "^4.0.5"
  }
}
