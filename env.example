# Mobile App Review Insights - Environment Configuration

# Cache Configuration
CACHE_TTL=86400000              # Cache TTL in milliseconds (24 hours = 86400000)
CACHE_MAX_SIZE=1000             # Maximum number of cached entries

# API Limits
API_MAX_REVIEWS=100             # Maximum total reviews to return
API_IOS_REVIEWS=50              # Maximum iOS reviews to fetch
API_ANDROID_REVIEWS=50          # Maximum Android reviews to fetch

# Scraping Configuration
API_COUNTRY=us                  # Country code for app store scraping (us, gb, ca, etc.)
API_TIMEOUT=15000               # API timeout in milliseconds
API_RETRIES=2                   # Number of retry attempts for failed requests

# Rate Limiting
RATE_LIMIT_WINDOW=900000        # Rate limit window in milliseconds (15 minutes)
RATE_LIMIT_MAX=100              # Maximum requests per window

# Feature Flags
ENABLE_SENTIMENT=true           # Enable sentiment analysis
ENABLE_CACHING=true             # Enable response caching
ENABLE_RATE_LIMIT=true          # Enable API rate limiting
DEBUG_MODE=false                # Enable debug logging

# Testing Configuration
TEST_API_URL=http://localhost:3000  # API URL for contract tests

# Deployment Configuration (Netlify)
NODE_VERSION=18                 # Node.js version for deployment
NPM_VERSION=9                   # NPM version for deployment
